# APCUPSD Configuration
# Set this to the IP address or hostname of your APCUPSD server
APCUPSD_HOST=10.0.0.13
APCUPSD_PORT=3551

# Flask Environment (development/production)
FLASK_ENV=production

# UPS Hardware Configuration
# UPS rating in VA (Volt-Amperes)
UPS_VA=3000
# UPS rating in Watts
UPS_WATTS=2700
# Power factor (Watts/VA ratio)
POWER_FACTOR=0.9
# Nominal voltage for warnings (typically 120V for US, 230V for EU)
NOMINAL_VOLTAGE=120

# Electricity Cost Configuration
# Cost per kWh in dollars (e.g., 0.124 = 12.4 cents per kWh)
ELECTRICITY_RATE=0.124

# Simulation Mode (for testing)
# Set to 'true' to simulate a power event
SIMULATE_POWER_EVENT=false

# Debug Mode
# Set to 'true' to enable debug logging
DEBUG=false